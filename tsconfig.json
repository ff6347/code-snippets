{
	"include": ["./**/*.js", "types/globals.d.ts"],
	"compilerOptions": {
		"incremental": true,
		"target": "ES2023",
		"lib": ["DOM", "ESNext"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"typeRoots": ["./node_modules/@types", "./types"],
		"types": ["p5"],

		"allowJs": true,
		"checkJs": true,

		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"noImplicitAny": true,

		"skipLibCheck": true
	}
}
